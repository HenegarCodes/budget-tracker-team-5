<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container main-content mt-5">
  <div class="row">
    <div class="col-md-6">
      <form id="goals-form">
        <div class="form-group">
          <label for="monthlyIncome"></label>
          <div class="dollar-sign">
            <input
              type="text"
              class="form-control"
              id="monthly-income"
              placeholder="Enter monthly income"
            />
          </div>

        </div>
        <div class="form-group">
          <label for="budgetGoal"></label>
          <div class="dollar-sign">
            <input
              type="text"
              class="form-control"
              id="budget-goal"
              placeholder="Enter savings goal"
            />
          </div>

        </div>
        <button
          type="submit"
          class="btn btn-primary"
          id="goals-btn"
        >Save</button>
           <button
          type="submit"
          class="btn btn-primary"
          id="update-btn"
        >Update</button>
      </form>
      <div class="col-md-6">
      <h1 id="monthly-income-input">Monthly Income: $<span id="monthly-income-value"></span></h1>
      <h1 id="savings-goal-input">Savings Goal: $<span id="savings-goal-value"></span></h1>
  </div>
   <div class="canvas-container">
    <canvas id="donut-chart" width="50" height="50"></canvas>
    <canvas id="bar-chart" width="50" height="50"></canvas>
   </div>
    
      </div>
  
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Expenses</h5>
          <div class="container" id="expense-container">
            {{!-- {{#if budgets.length}} --}}
              <div class="row expense-row" id="expense-row">
                <div class="col-md-6">
                  <div class="form-group budget-id">
                    <label for="categorySelect"></label>
                    <select
                      class="form-control custom-select category-select2"
                      id="categorySelect"
                    >
                      <option disabled selected>Select Category</option>
                      {{#each categories as |category|}} 
                        <option
                        class="category-option"
                          id="category_id"
                          data-category-id="{{this.id}}"
                          value="{{this.id}}"
                        >{{this.name}}</option>
                      {{/each}}

                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="costInput"></label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                      </div>
                      <input
                        type="text"
                        class="form-control cost-input"
                        id="costInput"
                        placeholder="Enter cost"
                      />
                    </div>
                  </div>
                </div>
              
               
              </div>
          
          </div>
          
    <div class="budget-display">
  {{#if budgets.length}}
    {{#each budgets as |budget|}}
    
      <div class="budget-item">
        <span class="category">{{budget.category.name}}</span>
        <span class="cost">${{budget.cost}}</span>
         <button class="delete-budget">delete</button>
      </div>
     
    {{/each}}
  
</div>

       <div class="align-self-center text-center">
        <div id="expense-details"></div>
        <button type="button" id="add-expense-btn" class="btn btn-primary">Add expense</button>
        </div>

          <h6 class="total-header">Total: ${{totalExpense}}</h6>
        </div>
      {{/if}}
        </div>
    </div>
   </div>



  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/dashboardpage.js"></script>
